[
    {
        "description": "spawn terminal",
        "keybinding": "super+t",
        "exec": "alacritty"
    },
    {
        "description": "spawn firefox",
        "keybinding": "super+b",
        "exec": "firefox"
    },
    {
        "description": "spawn file explorer",
        "keybinding": "super+e",
        "exec": "nemo"
    },
    {
        "description": "run prompt",
        "keybinding": "super+r",
        "exec": "rofi -show run"
    },
    {
        "description": "restart bspwm",
        "keybinding": "super+ctrl+r",
        "exec": "bspc wm -r"
    },
    {
        "description": "Show clipmenu",
        "keybinding": "super+c",
        "exec": "CM_LAUNCHER=rofi clipmenu"
    },
    {
        "description": "quit bspwm",
        "keybinding": "super+ctrl+shift+q",
        "exec": "bspc quit"
    },
    {
        "description": "focus window in direction (up)",
        "keybinding": "super+Up",
        "exec": "bspc node -f north"
    },
    {
        "description": "focus window in direction (down)",
        "keybinding": "super+Down",
        "exec": "bspc node -f south"
    },
    {
        "description": "focus window in direction",
        "keybinding": "super+Left (left)",
        "exec": "bspc node -f west"
    },
    {
        "description": "focus window in direction",
        "keybinding": "super+Right (right)",
        "exec": "bspc node -f east"
    },
    {
        "description": "move window in direction (up)",
        "keybinding": "super+shift+Up",
        "exec": "bspc node -s north"
    },
    {
        "description": "move window in direction (down)",
        "keybinding": "super+shift+Down",
        "exec": "bspc node -s south"
    },
    {
        "description": "move window in direction (left)",
        "keybinding": "super+shift+Left",
        "exec": "bspc node -s west"
    },
    {
        "description": "move window in direction (right)",
        "keybinding": "super+shift+Right",
        "exec": "bspc node -s east"
    },
    {
        "description": "resize window in direction (up)",
        "keybinding": "super+ctrl+Up",
        "exec": "bspc node -z top 0 -20"
    },
    {
        "description": "resize window in direction (down)",
        "keybinding": "super+ctrl+Down",
        "exec": "bspc node -z bottom 0 20"
    },
    {
        "description": "resize window in direction (left)",
        "keybinding": "super+ctrl+Left",
        "exec": "bspc node -z left -20 0"
    },
    {
        "description": "resize window in direction (right)",
        "keybinding": "super+ctrl+Right",
        "exec": "bspc node -z right 20 0"
    },
    {
        "description": "rotate tree nodes",
        "keybinding": "super+shift+bracketleft",
        "exec": "bspc node @/ -C backward"
    },
    {
        "description": "rotate tree nodes",
        "keybinding": "super+shift+bracketright",
        "exec": "bspc node @/ -C forward"
    },
    {
        "description": "close focused window",
        "keybinding": "super+q",
        "exec": "xdo close"
    },
    {
        "description": "alternate between the tiled and monocle layout",
        "keybinding": "super+m",
        "exec": "bspc desktop -l next"
    },
    {
        "description": "focus next node",
        "keybinding": "super+Tab",
        "exec": "bspc node -f next.local"
    },
    {
        "description": "focus last node",
        "keybinding": "super+shift+Tab",
        "exec": "bspc node -f last.local"
    },
    {
        "description": "palette: show",
        "keybinding": "super+p",
        "exec": "palette show"
    },
    {
        "description": "cycle layout",
        "keybinding": "super+space",
        "exec": "bsp-layout cycle  "
    },
    {
        "description": "select layout by name",
        "keybinding": "super+alt+space",
        "exec": "bsp-layout set `bsp-layout layouts | rofi -dmenu -p 'select layout'`"
    },
    {
        "description": "switch to desktop in direction up",
        "keybinding": "super+alt+Up",
        "exec": "dskmgr move up"
    },
    {
        "description": "switch to desktop in direction down",
        "keybinding": "super+alt+Down",
        "exec": "dskmgr move down"
    },
    {
        "description": "switch to desktop in direction left",
        "keybinding": "super+alt+Left",
        "exec": "dskmgr move left"
    },
    {
        "description": "switch to desktop in direction right",
        "keybinding": "super+alt+Right",
        "exec": "dskmgr move right"
    },
    {
        "description": "move to desktop in direction up",
        "keybinding": "super+alt+shift+Up",
        "exec": "~/.config/scripts/bspwm/move-window-to-desktop-in-direction up"
    },
    {
        "description": "move to desktop in direction down",
        "keybinding": "super+alt+shift+Down",
        "exec": "~/.config/scripts/bspwm/move-window-to-desktop-in-direction down"
    },
    {
        "description": "move to desktop in direction left",
        "keybinding": "super+alt+shift+Left",
        "exec": "~/.config/scripts/bspwm/move-window-to-desktop-in-direction left"
    },
    {
        "description": "move to desktop in direction right",
        "keybinding": "super+alt+shift+Right",
        "exec": "~/.config/scripts/bspwm/move-window-to-desktop-in-direction right"
    },
    {
        "description": "create new desktop",
        "keybinding": "super+n",
        "exec": "dskmgr new-y"
    },
    {
        "description": "create new desktops groups",
        "keybinding": "super+shift+n",
        "exec": "dskmgr new-x"
    },
    {
        "description": "remove current desktop",
        "keybinding": "super+ctrl+q",
        "exec": "dskmgr remove"
    },
    {
        "description": "Volume up",
        "keybinding": "XF86AudioRaiseVolume",
        "exec": "amixer set Master 3%+; amixer set Master unmute"
    },
    {
        "description": "Volume down",
        "keybinding": "XF86AudioLowerVolume",
        "exec": "amixer set Master 3%-; amixer set Master unmute"
    },
    {
        "description": "Volume mute",
        "keybinding": "XF86AudioMute",
        "exec": "amixer set Master toggle"
    }
]